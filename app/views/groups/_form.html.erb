<%= form_with model: @group, url: user_groups_path(user_id: current_user.id), local: true, scope: :group, method: 'post', class: 'form' do |form| %>
    
    <div>
        <%= form.text_field :name, autofocus: true, required: true, class: 'form-input', placeholder: 'Group name' %>
    </div>

    
    <div>
        <%= form.text_field :icon, required: true, class: 'form-input', placeholder: 'Icon URL' %>
    </div>

    <div>
        <%= form.submit "Add", class: 'form-input' %>
    </div>


<% end %>