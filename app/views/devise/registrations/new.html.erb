<div class="sign-up-page">
  <div class="sign-up-header">
    <%= link_to '/' do %>
    <span class="material-symbols-outlined sign-up-left">
      arrow_back_ios
    </span>
    <% end %>    
    
    <h3 class="sign-up-h3">REGISTER</h3>
    
    <strong class="sign-up-strong-link" onclick="document.querySelector('form').submit()">New</strong>


  </div>

  <div class='avatar'>
    <img src="https://villagesonmacarthur.com/wp-content/uploads/2020/12/Blank-Avatar.png" width=70 alt="avatar">

    <a href="#" >Upload image</a>

  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%# <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, 
    autocomplete: "name", 
    require: true,
    placeholder: 'Full name',
    class: 'form-input'
    %>
  </div>

  <div class="field">
    <%# <%= f.label :email %>
    <%= f.email_field :email, 
    autocomplete: "email", 
    required: true, 
    placeholder: 'Email',
    class: 'form-input'
    %>
  </div>

  <div class="field">
    <%# <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    
    <%= f.password_field :password, 
    autocomplete: "new-password", 
    required: true, 
    placeholder: 'Password',
    class: 'form-input'
    %>
  </div>

  <div class="field">
    <%# <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, 
    autocomplete: "new-password", 
    required: true, 
    placeholder: 'Password confirmation', 
    class: 'form-input'
    %>
  </div>

  <div class="actions hidden">
    <%= f.submit "Sign up", hidden: true %>
  </div>
<% end %>

<%# <%= render "devise/shared/links" %>

</div>